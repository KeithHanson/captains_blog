<% if @posts && @posts.any? %>
  <% for post in @posts %>
	<div class="post">
		<h2><a class="title" href="<%= post.url -%>" rel="bookmark"><%= post.title %></a></h2>
		<div class="info">
			<span class="date"><%= post.published_at.strftime('%B %d, %Y')%></span>
      <span class="comments">
        <% unless post.accepting_comments? %>
          <span>Comments off</span>
        <% end %>
    
        <% if post.comment_count > 0 %>
          <a href="<%= post.url -%>#comments" title="Comment on HTML"><%= post.comment_count %> comment<%= post.comment_count > 0 ? 's' : '' -%></a>
        <% else %>
          <a href="<%= post.url -%>#comments" title="Leave a Comment">Be the first to comment!</a>
        <% end %>
      </span>
			<div class="fixed"></div>
		</div>

		<div class="content">
      <%= post.content %>
			<div class="fixed"></div>
		</div>

		<div class="under"></div>
	</div>
	<% end %>
<% end %>

<div id="pagenavi">
  <span class="newer"></span>
	<span class="older"></span>
	<div class="fixed"></div>
</div>