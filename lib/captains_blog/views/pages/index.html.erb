<% if @posts && @posts.any? %>
  <% for post in @posts %>
	<div class="post">
		<h3><a class="title" href="<%= @blog.root + post.path %>" rel="bookmark"><%= post.title %></a></h3>
		<div class="info">
			<span class="date"><%= post.published_at.strftime('%B %d, %Y')%></span>
      <span class="comments">
        <% unless post.accepting_comments? %>
          <span>Comments off</span>
        <% end %>
    
        <% if post.comments.size > 0 %>
          <a href="<%= @blog.root + post.path %>#comments" title="Comment on HTML"><%= post.comments.size %> comment<%= 's' if post.comments.size > 1 %></a>
        <% else %>
          <a href="<%= @blog.root + post.path %>#comments" title="Leave a Comment">Be the first to comment!</a>
        <% end %>
      </span>
			<div class="fixed"></div>
		</div>

		<div class="content">
      <%= post.content %>
			<div class="fixed"></div>
		</div>

		<div class="under"></div>
	</div>
	<% end %>
<% end %>

<div id="pagenavi">
  <span class="newer"></span>
	<span class="older"></span>
	<div class="fixed"></div>
</div>